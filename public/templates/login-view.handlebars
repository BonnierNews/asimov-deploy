<div class="page-header-row">
		<div class="page-title">
				<h1>Login</h1>
		</div>

		<div class="page-controls">
		</div>

		<div class="clearfix" />
</div>

<div class="page-content" style="min-height: 400px; padding-top: 30px;">
	<div class="container-fluid">
		<div class="span10">

			{{#if authUsingLocal}}
				<div class="alert alert-error login-error hide">
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					<i class="icon-exclamation-sign icon icon-white" />
					<span></span>
				</div>

				<div class="login-option">
					<label>Asimov deploy user login</label>
					<form class="local-login-form">
						<input type="text" class="username input-medium" id="input-small" placeholder="Username" />
						<input type="password" class="password input-medium" id="password" placeholder="Password" />
						<button class="btn btn-info btn-login pull-right" type="submit">
							<i class="icon icon-user icon-white" />
							Login
						</button>
					</form>
				</div>
			{{/if}}

			{{#if authUsingGoogle}}
				<div class="login-option">
					<label>Google user login</label>

					<a href="/auth/google" class="btn btn-info pull-right" data-bypass="1">
						<i class="icon icon-user icon-white" />
						Login
					</a>
				</div>
			{{/if}}
	</div>
	</div>
</div>


